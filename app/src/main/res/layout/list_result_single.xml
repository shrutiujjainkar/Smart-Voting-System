<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_party_wise_report"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginTop="4dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@color/colorCreame"
                >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_result_single_party_name"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_result_single_party_won"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_result_single_party_leading"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_result_single_party_total"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>